{
  "compilerOptions": {
    "target": "ESNext", // Set the target to ESNext
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true, // Keep this if you donâ€™t need emitting files, for Next.js it is fine
    "esModuleInterop": true,
    "module": "ESNext", // ESNext for native module support
    "moduleResolution": "node", // Use node module resolution
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
